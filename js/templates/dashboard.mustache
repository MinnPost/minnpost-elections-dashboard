<div class="dashboard {{ classes }}">

  <div class="location-search-section">
    <form role="form" class="" on-submit="addresssSearch">

      <div class="location-search-group">
        <div class="form-input-group">
          <label for="address" class="sr-only">Search address for results</label>
          <input type="text" id="address-search" placeholder="Search address for results">

          <div class="button-group">
            <button type="submit" class="button primary address-search-submit">Search</button>
          </div>
        </div>
      </div>

      {{#geolocationEnabled}}
        <div class="geolocation">
          <a href="#location">Or view contests at your current location <i class="fa fa-location-arrow"></i></a>
        </div>
      {{/geolocationEnabled}}
    </form>
  </div>

  <div class="last-updated-section">
    <div>
      {{#election.date}}
        {{ election.date.format('MMM DD, YYYY') }} {{ (election.primary) ? 'primary' : 'general' }} election {{#election.isTest}}<em>test</em>{{/election.isTest}} results.
      {{/election.date}}
      {{#election.updated}}
        Last updated {{ election.updated.formatToday() }}
      {{/election.updated}}
    </div>
  </div>

  <div class="row">
    <div class="column-medium-50">
      <div class="inner-column-left">
        {{#dashboard:di}}{{#(di < dashboard.length / 2)}}
          <div class="{{ class }} dashboard-section">
            {{#(type === 'race')}}
              {{>contest}}
            {{/()}}
          </div>
        {{/()}}{{/dashboard}}

        <div class="elections-search dashboard-section">
          <h4>Search elections</h4>
          {{>electionsSearch}}
        </div>
      </div>
    </div>

    <div class="column-medium-50">
      <div class="inner-column-right">
        {{#dashboard:di}}{{#(di >= dashboard.length / 2)}}
          <div class="{{ class }} dashboard-section">
            {{#(type === 'race')}}
              {{>contest}}
            {{/()}}

            {{#(type === 'links')}}
              <h4>Other elections</h4>
              <ul>
                {{#links}}
                  <li><a href="{{ href }}">{{ text }}</a></li>
                {{/links}}
              </ul>
            {{/()}}
          </div>
        {{/()}}{{/dashboard}}

        <div class="elections-search dashboard-section">
          <h4>Search elections</h4>
          {{>electionsSearch}}
        </div>
      </div>
    </div>
  </div>
</div>
