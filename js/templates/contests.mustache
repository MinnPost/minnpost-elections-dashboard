<div class="contests">
  <a class="dashboard-link" href="#dashboard">&larr; Back to dashboard</a>

  <div class="row">
    <div class="column-medium-70 inner-column-left contests-title-section">
      <h2 class="contests-title {{#(lonlat != undefined)}}with-location{{/()}}">{{ (title) ? title : 'Contests' }}</h2>

      <p class="caption">
        Found
          {{#(models.length == 0 && !synced)}}
            <i class="loading small"></i>
          {{/())}}
          {{#synced}}
            {{ models.length }}
          {{/synced}}
        results.
      </p>

      {{#(lonlat != undefined)}}
        <p class="caption">The map below shows the approximate location of your search. If the location is not correct, try <a href="#dashboard">searching for a more specific address</a>.</p>

        <div id="location-map"></div>
      {{/())}}
    </div>

    <div class="column-medium-30 inner-column-right"></div>
  </div>

  <div>
    {{#(models.length == 0 && !synced)}}
      {{>loading}}
    {{/())}}

    {{#(models.length == 0 && synced)}}
      <p class="large">Unable to find any contests.</p>
    {{/())}}
  </div>

  <div class="contest-list">
    {{#models:i}}
      {{>contest}}
    {{/models}}
  </div>
</div>
